{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "installCommand": "pip install -r requirements-vercel.txt",
  "functions": {
    "api/index.py": {
      "maxDuration": 60,
      "includeFiles": "Backend/ai-security-gateway/**/*.py"
    }
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index.py" }
  ]
}