DATABASE_URL=sqlite:///test.db

# Entorno de la aplicación
FLASK_ENV=development

# Claves secretas para Flask y JWT
SECRET_KEY=tu_clave_secreta
JWT_SECRET_KEY=tu_clave_jwt_secreta

# Base de datos (PostgreSQL/Supabase)
DATABASE_URL=postgresql://usuario:contraseña@host:puerto/nombre_db

# Hugging Face
HUGGINGFACE_MODEL=distilbert-base-uncased-finetuned-sst-2-english
# (Opcional: puedes cambiar el modelo por otro confiable del hub)

# OpenAI
OPENAI_API_KEY=tu_api_key_openai
OPENAI_MODEL=gpt-3.5-turbo
# (Opcional: puedes cambiar el modelo por otro soportado)

# Anthropic
ANTHROPIC_API_KEY=tu_api_key_anthropic
ANTHROPIC_MODEL=claude-3-opus-20240229
# (Opcional: puedes cambiar el modelo por otro soportado)

# Kubernetes
KUBE_NAMESPACE=default
# (Opcional: namespace a consultar, por defecto 'default')
# Si corres dentro de un clúster, no necesitas más. Si es local, asegúrate de tener el kubeconfig.

# GitHub
GITHUB_TOKEN=tu_token_github_de_minimo_privilegio
GITHUB_WEBHOOK_SECRET=tu_secreto_webhook_github
